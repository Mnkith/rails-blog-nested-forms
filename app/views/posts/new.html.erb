<h1>New post</h1>

<%= form_for @post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :content %>
  <%= f.text_area :content %><br>
  <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %><br><hr>
  Or create new tag
  <%= f.fields_for :tags, @post.tags.build do |t|%>
    <%= t.label :name %><br>
    <%= t.text_field :name %><br>
  <% end %>
  <%= f.submit %><br><hr>
<% end %>

<%= link_to 'Back', posts_path %>
